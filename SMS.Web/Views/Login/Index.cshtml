
@{
    Layout = null;
}
@model SMS.Web.Models.LoginModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Assets/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Assets/css/customize.css" rel="stylesheet">
</head>

<body class="bg-login login-container">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-left">
                                <img style="width:100%; height: 100%" src="~/Assets/img/black-hyundai-suv-1519192.jpg" />
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <img src="~/Assets/img/logo.png" />
                                        <div id="label-name">
                                            <img id="logo-login-left" src="~/Assets/img/shield.png" />
                                            <h4 style="font-weight:700; color:#4CAF50">Security Management <span style="color:coral">System</span></h4>
                                        </div>
                                        <br />
                                        <div>
                                            <img src="~/Assets/img/icons8-key-40.png" />
                                            <label style="font-weight:600; color:coral">Đăng nhập</label>
                                        </div>
                                        <hr />
                                    </div>
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                @Html.CheckBoxFor(loginModel => loginModel.Check, new { @type = "checkbox", @class = "custom-control-input", @id = "checkType" })
                                                <label class="custom-control-label text-after-checkbox" for="checkType">Đăng nhập bằng tài khoản Bảo vệ - Thời vụ</label>
                                            </div>
                                        </div>
                                        <div class="form-group input-group-sm">
                                            @Html.TextBoxFor(loginModel => loginModel.EmpCode, new { maxlength = "8 ", @class = "form-control form-control-user", @id = "empcode", @placeholder = "Username", @autofocus = "autofocus", @autocomplete = "off" })
                                        </div>
                                        <div class="form-group input-group-sm">
                                            @Html.TextBoxFor(loginModel => loginModel.Password, new { @class = "form-control form-control-user", @id = "password", @placeholder = "Password", @type = "password" })
                                        </div>
                                        <hr />
                                        <button type="submit" class="btn btn-primary btn-user btn-block btn-sm">Đăng nhập</button>
                                        <hr>

                                        <div class="text-center">
                                            <a class="small" href="https://autoway.hyundai.net">Quên mật khẩu?</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Assets/js/sb-admin-2.min.js"></script>

    <script>
        $("#empcode").keyup(function () {
            if ($('#empcode').val().length == 8) {
                $('#password').focus();
            }
        });
    </script>

</body>

</html>

