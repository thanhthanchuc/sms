@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Assets/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Assets/css/jquery-confirm.css" rel="stylesheet" />
    <link href="~/Assets/css/jquery.timepicker.min.css" rel="stylesheet" />
    <style>
        label {
            color: black;
        }
    </style>
}

<!--Div chứa table dữ liệu-->
<div style="width:100%">
    <div class="card-header">
        <h5 class="m-0 font-weight-bold text-primary">DANH SÁCH KHÁCH VÀO RA</h5>
    </div>
    <div class="row dataTables_wrapper dt-bootstrap4 above-table">
        <div class="col-2 input-group input-group-sm">
            <label class="no-margin-bottom" style="padding-top: 5px">Từ ngày</label>
            &nbsp;
            <input id="date_from" class="form-control bg-light from-date" value="@ViewBag.from" autocomplete="off" placeholder="@DateTime.Now.ToString("dd/MM/yyyy")">
        </div>
        <div class="col-2 input-group input-group-sm">
            <label class="no-margin-bottom" style="padding-top: 5px">Đến ngày</label>
            &nbsp;
            <input id="date_to" class="form-control bg-light to-date" value="@ViewBag.to" autocomplete="off" placeholder="@DateTime.Now.ToString("dd/MM/yyyy")">
        </div>
        <div class="col-2 input-group input-group-sm">
            <label class="no-margin-bottom" style="padding-top: 5px">Công ty</label>
            &nbsp;
            <input id="company" class="form-control bg-light to-date" value="@ViewBag.company" autocomplete="off" />
        </div>
        <div class="col-2 input-group input-group-sm">
            <label class="no-margin-bottom" style="padding-top: 5px">Phòng ban</label>
            &nbsp;
            <input id="team" class="form-control bg-light to-date" value="@ViewBag.team" autocomplete="off" />
        </div>
        <div class="col-2 input-group input-group-sm">
            <label class="no-margin-bottom" style="padding-top: 5px">Mã nhân viên</label>
            &nbsp;
            <input id="emp_code" class="form-control bg-light to-date" value="@ViewBag.employee" autocomplete="off">
        </div>
        <div class="col-2">
            <button class="btn btn-sm btn-primary" id="btn-search" type="button"><i class="fas fa-search"></i> Tìm kiếm</button>
        </div>
    </div>
</div>

<div style="width:100%; overflow-x:auto">
    <!--Bảng dữ liệu Về sớm-->
    <table data-order='[[ 0, "desc" ]]' class="table table-hover table-bordered" id="LE-table" style="border-collapse: collapse; width: 100%">
        <!--Tiêu đề cột-->
        <thead>
            <tr class="table-heading">
                <th class="th-1">Mã</th>
                <th class="th-1">Nhân viên</th>
                <th class="th-1">Vị trí</th>
                <th class="th-1">Phòng ban</th>
                <th class="th-1">Khách</th>
                <th class="th-1">Công ty</th>
                <th class="th-1">Lí do</th>
                <th class="th-1">Thời gian vào</th>
                <th class="th-1">Thời gian ra</th>
                <th class="th-1">Thao tác</th>
                <th class="th-1">Chi tiết</th>
                <th class="th-1">In ấn</th>
                <th class="th-1">Người tạo</th>
                <th class="th-1">Chỉnh sửa</th>
            </tr>
        </thead>
        <tbody id="tblData"></tbody>
    </table>
</div>
<div id="pagination" class="pagination"></div>
<!-- /.container-fluid -->

@section scripts{
    <script src="~/Assets/js/jquery.timepicker.min.js"></script>
    <script src="~/Assets/js/jquery-confirm.js"></script>
    <script src="~/Assets/js/jquery.dataTables.min.js"></script>
    <script>
        var table = null;
        currentRole = null;
        var isGuard = false;
        $(document).ready(() => {
            var options = loadView();

            //$('#LE-table').DataTable({
            //    "order": [[0, "desc"]]
            //})
            table = $('#LE-table').DataTable(options);
        })

        function loadView() {
            var from = $('#date_from').val() ? $('#date_from').val() : Date.now();
            var to = $('#date_to').val() ? $('#date_to').val() : Date.now();
            var team = $('#team').val() ? $('#team').val() : null;
            var company = $('#company').val() ? $('#company').val() : null;
            var employee = $('#emp_code').val() ? $('#emp_code').val() : null;

            var options = {
                "serverSide": false,
                "searching": false,
                "orderCellsTop": true,
                "fixedHeader": true,
                "processing": true,
                "paging": true,
                "oLanguage": {
                    "sLengthMenu": "_MENU_"
                },
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
                "pageLength": 20,
                "lengthChange": false,
                "ajax": {
                    "type": "POST",
                    "url": "/Guest/FetchGuestDataHistory?from=" + from + "&to=" + to + "&company=" + company + "&team=" + team + "&employee=" + employee,
                    "dataType": "json",
                    "contentType": 'application/json; charset=utf-8',
                    "dataSrc": function (res) {
                        currentRole = res.currentRole;
                        isGuard = res.isGuard;
                        return res.data;
                    }
                },
                "columns": [
                    { data: function (res) { return `<span>${res.ID}</span>`; } },
                    {
                        data: function (res) {
                            return `${res.EmployeeID} | ${res.EmployeeName}`;
                        }
                    },
                    { data: function (res) { return res.Position; } },
                    { data: function (res) { return res.Team; } },
                    {
                        data: function (res) {
                            return res.FullName;
                        }
                    },
                    { data: function (res) { return res.Company; } },
                    { data: function (res) { return res.Purpose; } },
                    {
                        data: function (res) {
                            return `<div>${res.EstimatedDateIn}  ${res.EstimatedTimeIn}</div>`;
                        }
                    },
                    {
                        data: function (res) {
                            return `<div>${res.EstimatedDateOut}  ${res.EstimatedTimeOut}</div>`;
                        }
                    },
                    {
                        data: function (res) {
                            if (currentRole === 0) {
                                return ''
                            }
                            html = `<a class="btn btn-edit btn-standard btnEdit" title="Sửa" href="/Guest/Edit/${res.ID}">
                                                                                <i class="icon fas fa-cog" style="margin-left: -4px"></i>
                                                                            </a>
                                                                            <a class="btn btn-danger btn-standard btn-delete btnXoa" onclick="Delete(${res.ID})" title="Xóa">
                                                                                <i class="icon fas fa-times" style="margin-left: -2px; color: white; cursor: pointer"></i>
                                                                            </a>`;
                            return html;
                        }
                    },
                    {
                        data: function (res) {
                            var html = `<a href="/Guest/Detail/${res.ID}" class="btn btn-standard btn-primary"><i class="fas fa-info" style="color: white"></i></a>`;
                            return html;
                        }
                    },
                    {
                        data: function (res) {
                            return `<a href="/Guest/GuestReport/${res.ID}" target="_blank" class="btn btn-print btn-primary btn-standard" id="btnPrint" title="In báo cáo">
                                                                                <i class="fas fa-print" style="margin-left:-3.5px;"></i>
                                                                            </a>`;
                        }
                    },
                    {
                        data: function (res) {
                            if (res.CreatedDate === null || res.CreatedDate === "" || typeof (res.CreatedDate) === "undefined")
                                return "";
                            var date = new Date(parseInt(res.CreatedDate.replace(/[^0-9 +]/g, '')));
                            var createdDate = `${date.getDate()}/${date.getMonth() + 1}/${date.getFullYear()}  ${date.getHours()}:${date.getMinutes()}`;
                            return `<span class="border-right" style="padding-right:10px;">${res.CreatedBy}</span><span style="margin-left:10px;">${createdDate}</span>`;
                        }
                    },
                    {
                        data: function (res) {
                            if (res.ModifiedDate === null || res.ModifiedDate === "" || typeof (res.ModifiedDate) === "undefined")
                                return "";
                            var date = new Date(parseInt(res.ModifiedDate.replace(/[^0-9 +]/g, '')));
                            var modifiedDate = `${date.getDate()}/${date.getMonth() + 1}/${date.getFullYear()}  ${date.getHours()}:${date.getMinutes()}`;
                            return `<span class="border-right" style="padding-right:10px;">${res.ModifiedBy}</span ><span style="margin-left:10px;">${modifiedDate}</span>`;
                        }
                    }
                ]
            };

            debugger

            return options;
        }

        function Delete(id) {
            $.confirm({
                title: 'Xác nhận!',
                content: 'Bạn có chắc muốn xóa!',
                buttons: {
                    confirm: async function () {
                        await $.ajax({
                            url: "/Guest/Delete/" + id,
                            method: "GET",
                            success: function () {
                                //table.draw();
                                window.location.reload();
                            }
                        })
                    },
                    cancel: function () {
                        //$.alert('Hủy bỏ!');
                    }
                }
            });
        }

        $('#btn-search').click(function () {
            var team = $('#team').val() ? $('#team').val() : null;

            //$('#LE-table').DataTable({
            //    "order": [[0, "desc"]]
            //})
            var table = $('#LE-table').DataTable();
            table.columns(3).search(team);

            debugger
            table.draw();
        });

        $('.datepicker, #date_from, #date_to').datepicker({
            dateFormat: 'dd/mm/yy'
        });

        $("#guest").removeClass('collapse');
        $("#guest").removeClass('collapsed');
        $("#guest").attr("aria-expanded", "true");
        $("#guest-history").addClass('active');
        $("#collapseGuest").addClass('show');
        $("#collapseInOut").removeClass('collapse');
    </script>
}